<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.voidustries.poly.gui.Controller"
          alignment="CENTER" hgap="10"
          vgap="10">

    <padding>

        <Insets top="15"
                bottom="15"
                left="15"
                right="15"/>

    </padding>

    <!-- Input Panel -->

    <Label text="RSS URL:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"/>
    <TextField fx:id="rss_url"
               text="%rss_url"
               GridPane.columnSpan="2"
               GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
    <Label text="Database Location:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"/>
    <TextField fx:id="database_dir"
               text="%database_dir"
               GridPane.columnIndex="0"
               GridPane.rowIndex="3"/>
    <Button onMouseClicked="#dbDirChooser"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            text="..."/>
    <Label text="TV Show DIR:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="4"/>
    <TextField fx:id="show_dir"
               text="%show_dir"
               GridPane.columnIndex="0"
               GridPane.rowIndex="5"/>
    <Button onMouseClicked="#showDirChooser"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5"
            text="..."/>

    <!-- V Separator -->

    <Separator GridPane.columnIndex="2"
               GridPane.rowIndex="0"
               GridPane.rowSpan="6"
               orientation="VERTICAL"/>

    <!-- Timer Panel-->

    <Text text="Update RSS Every X Hours"
          textAlignment="RIGHT"
          GridPane.columnIndex="3"
          GridPane.rowIndex="1"/>
    <Spinner fx:id="rss_update"
             editable="true"
             minWidth="60"
             maxWidth="60"
             GridPane.columnIndex="4"
             GridPane.rowIndex="1">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1"
                                                            max="100"
                                                            initialValue="%rss_update"/>
        </valueFactory>
    </Spinner>

    <Text text="Try Downloads Every X Hours"
          textAlignment="RIGHT"
          GridPane.columnIndex="3"
          GridPane.rowIndex="2"/>
    <Spinner fx:id="download_update"
             editable="true"
             minWidth="60"
             maxWidth="60"
             GridPane.columnIndex="4"
             GridPane.rowIndex="2">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1"
                                                            max="100"
                                                            initialValue="%download_update"/>
        </valueFactory>
    </Spinner>

    <Text text="Switch To F2 After X Tries"
          textAlignment="RIGHT"
          GridPane.columnIndex="3"
          GridPane.rowIndex="3"/>
    <Spinner fx:id="f2_after"
             editable="true"
             minWidth="60"
             maxWidth="60"
             GridPane.columnIndex="4"
             GridPane.rowIndex="3">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="1"
                                                            max="100"
                                                            initialValue="%f2"/>
        </valueFactory>
    </Spinner>

    <HBox spacing="10"
          alignment="CENTER"
          GridPane.columnIndex="3"
          GridPane.columnSpan="3"
          GridPane.rowIndex="4"
          GridPane.rowSpan="1">

        <Button text="F2 Setup"
                onMouseClicked="#setF2"/>
    </HBox>

    <!-- H Separator -->

    <Separator GridPane.columnIndex="0"
               GridPane.columnSpan="5"
               GridPane.rowIndex="6"
    />

    <!-- Log Panel -->

    <!-- TODO: Make Into INFO panel -->

    <Text text="Info:"
          GridPane.columnIndex="0"
          GridPane.rowIndex="7"/>

    <Text text="Number of shows in Database: "
          GridPane.columnIndex="0"
          GridPane.rowIndex="8"/>

    <Text text="number_in_database"
          GridPane.columnIndex="1"
          GridPane.rowIndex="8"/>

    <Text text="Number of shows left to download: "
          GridPane.columnIndex="0"
          GridPane.rowIndex="9"/>

    <Text text="shows_left"
          GridPane.columnIndex="1"
          GridPane.rowIndex="9"/>

    <!-- Choice Buttons -->

    <HBox spacing="10"
          alignment="BOTTOM_RIGHT"
          GridPane.columnIndex="0"
          GridPane.columnSpan="5"
          GridPane.rowIndex="12">

        <Button text="Apply"
                onMouseClicked="#onApply"/>
        <Button text="Cancel"
                onMouseClicked="#onCancel"/>

    </HBox>

</GridPane>